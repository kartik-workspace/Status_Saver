<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
        android:background="#f8f7fc"
        >
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          
          <RelativeLayout
              android:id="@+id/rel"
              android:layout_width="match_parent"
              android:layout_height="250dp"
              android:background="@color/colorPrimary">

              <ImageView
                  android:id="@+id/logo"
                  android:layout_width="150dp"
                  android:layout_height="150dp"
                  android:layout_centerInParent="true"
                  android:src="@drawable/status_logo" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/app_name"
                  android:layout_below="@id/logo"
                  android:layout_centerHorizontal="true"
                  android:textSize="22sp"
                  android:textColor="@color/black"
                  android:textStyle="bold"
                  android:layout_marginTop="10dp"/>

          </RelativeLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_below="@id/rel"
              android:orientation="vertical"
              android:padding="12dp"
              >
              <RelativeLayout

                  android:id="@+id/shareChat"
                  android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:background="@drawable/rectangle"
                  android:layout_marginHorizontal="5dp"
                  android:layout_marginTop="10dp"
                  android:elevation="3dp"
                  android:layout_marginBottom="5dp">
                  
                  <ImageView
                      android:id="@+id/sharechat_logo"
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:src="@drawable/sharechat"
                      android:layout_centerVertical="true"
                      android:layout_marginStart="12dp"/>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_marginStart="10dp"
                      android:layout_marginTop="10dp"
                      android:layout_marginEnd="10dp"

                      android:layout_marginBottom="10dp"
                      android:layout_toLeftOf="@id/sharechat_arr"
                      android:layout_toRightOf="@id/sharechat_logo"
                      android:orientation="vertical">

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="12dp"
                          android:text="ShareChat"
                          android:textColor="@color/colorPrimaryDark"
                          android:textSize="22sp"
                          android:textStyle="bold" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="12dp"
                          android:text="Download ShareChat Videos"
                          android:textColor="@color/colorPrimaryDark"
                          android:textSize="16sp"

                          />
                  </LinearLayout>
                  
                  <ImageView
                      android:id="@+id/sharechat_arr"
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:src="@drawable/ic_arrow"
                      android:layout_alignParentEnd="true"
                      android:layout_centerVertical="true"
                      android:layout_marginEnd="10dp"
                      />

              </RelativeLayout>

              <RelativeLayout
                  android:id="@+id/whatsapp"
                  android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:background="@drawable/rectangle"
                  android:layout_marginHorizontal="5dp"
                  android:layout_marginTop="5dp"
                  android:elevation="3dp"
                  android:layout_marginBottom="5dp">

                  <ImageView
                      android:id="@+id/whatsapp_logo"
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:src="@drawable/whatsapp_logo"
                      android:layout_centerVertical="true"
                      android:layout_marginStart="12dp"/>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_marginStart="10dp"
                      android:layout_marginTop="10dp"
                      android:layout_marginEnd="10dp"

                      android:layout_marginBottom="10dp"
                      android:layout_toLeftOf="@id/whatsapp_arr"
                      android:layout_toRightOf="@id/whatsapp_logo"
                      android:orientation="vertical">

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="12dp"
                          android:text="WhatsApp"
                          android:textColor="@color/colorPrimaryDark"
                          android:textSize="22sp"
                          android:textStyle="bold" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="12dp"
                          android:text="Save Whatsapp status"
                          android:textColor="@color/colorPrimaryDark"
                          android:textSize="16sp"

                          />
                  </LinearLayout>

                  <ImageView
                      android:id="@+id/whatsapp_arr"
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:src="@drawable/ic_arrow"
                      android:layout_alignParentEnd="true"
                      android:layout_centerVertical="true"
                      android:layout_marginEnd="10dp"
                      />

              </RelativeLayout>

              <RelativeLayout
                  android:id="@+id/facebook"
                  android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:background="@drawable/rectangle"
                  android:layout_marginHorizontal="5dp"
                  android:layout_marginTop="5dp"
                  android:elevation="3dp"
                  android:layout_marginBottom="5dp">

                  <ImageView
                      android:id="@+id/facebook_logo"
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:src="@drawable/fb"
                      android:layout_centerVertical="true"
                      android:layout_marginStart="12dp"/>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_centerVertical="true"
                      android:layout_margin="10dp"
                      android:layout_toRightOf="@id/facebook_logo"
                      android:layout_toLeftOf="@id/facebook_arr"

                      >

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Facebook"
                          android:layout_marginLeft="12dp"
                          android:textSize="22sp"
                          android:textColor="@color/colorPrimaryDark"
                          android:textStyle="bold"
                          />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Download Facebook Videos"
                          android:layout_marginLeft="12dp"
                          android:textSize="16sp"
                          android:textColor="@color/colorPrimaryDark"

                          />
                  </LinearLayout>

                  <ImageView
                      android:id="@+id/facebook_arr"
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:src="@drawable/ic_arrow"
                      android:layout_alignParentEnd="true"
                      android:layout_centerVertical="true"
                      android:layout_marginEnd="10dp"
                      />

              </RelativeLayout>

              <RelativeLayout
                  android:id="@+id/aboutUs"
                  android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:background="@drawable/rectangle"
                  android:layout_marginHorizontal="5dp"
                  android:layout_marginTop="5dp"
                  android:elevation="3dp"
                  android:layout_marginBottom="5dp">

                  <ImageView
                      android:id="@+id/about_us"
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:src="@drawable/ic_about"
                      android:layout_centerVertical="true"
                      android:layout_marginStart="12dp"/>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_centerVertical="true"
                      android:layout_margin="10dp"
                      android:layout_toRightOf="@id/about_us"
                      android:layout_toLeftOf="@id/about_us_arr"

                      >

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="About Us"
                          android:layout_marginLeft="12dp"
                          android:textSize="22sp"
                          android:textColor="@color/colorPrimaryDark"
                          android:textStyle="bold"
                          />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Know More about app"
                          android:layout_marginLeft="12dp"
                          android:textSize="16sp"
                          android:textColor="@color/colorPrimaryDark"

                          />
                  </LinearLayout>

                  <ImageView
                      android:id="@+id/about_us_arr"
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:src="@drawable/ic_arrow"
                      android:layout_alignParentEnd="true"
                      android:layout_centerVertical="true"
                      android:layout_marginEnd="10dp"
                      />

              </RelativeLayout>
              <RelativeLayout
                  android:id="@+id/shareApp"
                  android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:background="@drawable/rectangle"
                  android:layout_marginHorizontal="5dp"
                  android:layout_marginTop="5dp"
                  android:elevation="3dp"
                  android:layout_marginBottom="5dp">

                  <ImageView
                      android:id="@+id/share_logo"
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:src="@drawable/ic_share"
                      android:layout_centerVertical="true"
                      android:layout_marginStart="12dp"/>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_centerVertical="true"
                      android:layout_margin="10dp"
                      android:layout_toRightOf="@id/share_logo"
                      android:layout_toLeftOf="@id/share_arr"

                      >

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Share App"
                          android:layout_marginLeft="12dp"
                          android:textSize="22sp"
                          android:textColor="@color/colorPrimaryDark"
                          android:textStyle="bold"
                          />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Share App with your friends"
                          android:layout_marginLeft="12dp"
                          android:textSize="16sp"
                          android:textColor="@color/colorPrimaryDark"

                          />
                  </LinearLayout>

                  <ImageView
                      android:id="@+id/share_arr"
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:src="@drawable/ic_arrow"
                      android:layout_alignParentEnd="true"
                      android:layout_centerVertical="true"
                      android:layout_marginEnd="10dp"
                      />

              </RelativeLayout>

              <RelativeLayout
                  android:id="@+id/rateUs"
                  android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:background="@drawable/rectangle"
                  android:layout_marginHorizontal="5dp"
                  android:layout_marginTop="5dp"
                  android:elevation="3dp"
                  android:layout_marginBottom="5dp">

                  <ImageView
                      android:id="@+id/rate_logo"
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:src="@drawable/ic_rate"
                      android:layout_centerVertical="true"
                      android:layout_marginStart="12dp"/>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_marginStart="10dp"
                      android:layout_marginTop="10dp"
                      android:layout_marginEnd="10dp"

                      android:layout_marginBottom="10dp"
                      android:layout_toLeftOf="@id/rate_arr"
                      android:layout_toRightOf="@id/rate_logo"
                      android:orientation="vertical">

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="12dp"
                          android:text="Rate Apps"
                          android:textColor="@color/colorPrimaryDark"
                          android:textSize="22sp"
                          android:textStyle="bold" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="12dp"
                          android:text="Rate our app"
                          android:textColor="@color/colorPrimaryDark"
                          android:textSize="16sp"

                          />
                  </LinearLayout>

                  <ImageView
                      android:id="@+id/rate_arr"
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:src="@drawable/ic_arrow"
                      android:layout_alignParentEnd="true"
                      android:layout_centerVertical="true"
                      android:layout_marginEnd="10dp"
                      />

              </RelativeLayout>
              <RelativeLayout
                  android:id="@+id/moreApps"
                  android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:background="@drawable/rectangle"
                  android:layout_marginHorizontal="5dp"
                  android:layout_marginTop="5dp"
                  android:elevation="3dp"
                  android:layout_marginBottom="5dp">

                  <ImageView
                      android:id="@+id/more_log"
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:src="@drawable/ic_more"
                      android:layout_centerVertical="true"
                      android:layout_marginStart="12dp"/>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_centerVertical="true"
                      android:layout_margin="10dp"
                      android:layout_toRightOf="@id/more_log"
                      android:layout_toLeftOf="@id/more_arr"

                      >

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="More Apps"
                          android:layout_marginLeft="12dp"
                          android:textSize="22sp"
                          android:textColor="@color/colorPrimaryDark"
                          android:textStyle="bold"
                          />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Download more applications"
                          android:layout_marginLeft="12dp"
                          android:textSize="16sp"
                          android:textColor="@color/colorPrimaryDark"

                          />
                  </LinearLayout>

                  <ImageView
                      android:id="@+id/more_arr"
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:src="@drawable/ic_arrow"
                      android:layout_alignParentEnd="true"
                      android:layout_centerVertical="true"
                      android:layout_marginEnd="10dp"
                      />

              </RelativeLayout>


          </LinearLayout>

      </RelativeLayout>



  </ScrollView>

    </RelativeLayout>
</layout>
